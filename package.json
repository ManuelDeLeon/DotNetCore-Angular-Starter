{
  "name": "vNext",
  "version": "0.0.0",
  "//": [
    "What scripts do:",
    "test: Run tests and watch files for changes.",
    "test-single: Run tests once.",
    "coverage: Show a test code coverage report.",
    "lint: Lint both TypeScript and HTML files. Check if the files follow our conventions.",
    "lint-ts: Lint TypeScript files. Check if the files follow our conventions.",
    "lint-html: Lint HTML files. Check if the files follow our conventions.",
    "build-dev: Compile and bundle the TypeScript code for development. This will also create the vendor bundle with our external references.",
    "build-prod: Compile and bundle the TypeScript code for production. This will also create the vendor bundle with our external references. See the size script.",
    "size: Show the size of each file and external dependency.",
    "start: Run the application in development mode. Same as dev script.",
    "dev: Run the application in development mode.",
    "prod: Run the application in production mode.",
    "initialize: Install all dependencies and build the application.",
    "gitbook: loads and serves a local gitbook instance of the markdown files included in ./documentation",
    "selenium-setup: Installs Selenium so it can be used by protractor",
    "selenium: Starts the Selenium server for e2e tests",
    "protractor: Runs e2e tests. By default it will be headless if Chrome 60+ is installed.",
    "e2e: Starts the app on dev mode, starts selenium, waits a moment for the app to boot up, runs e2e tests."
  ],
  "scripts": {
    "test": "karma start",
    "test-single": "karma start --single-run --env.coverage",
    "coverage": "rimraf ClientCoverage && npm run test-single && http-server -c-1 -o -p 9875 ClientCoverage",
    "show-coverage": "http-server -c-1 -o -p 9875 ClientCoverage",
    "lint": "npm run lint-ts && npm run lint-html",
    "lint-ts": "tslint ClientApp/**/*.ts",
    "lint-html": "htmlhint ClientApp/**/*.html -c .htmlhintrc",
    "build-dev": "webpack --progress --config webpack.config.vendor.js && webpack --progress",
    "build-prod": "webpack -p --progress --env.prod --config webpack.config.vendor.js && webpack -p --progress --env.prod",
    "size": "webpack -p --progress --env.prod --env.size --config webpack.config.vendor.js && webpack -p --progress --env.prod --env.size",
    "start": "npm run dev",
    "dev": "cross-env ASPNETCORE_ENVIRONMENT=Development dotnet run",
    "prod": "cross-env ASPNETCORE_ENVIRONMENT=Production dotnet run",
    "initialize": "npm install && npm run build-dev && dotnet restore && npm run selenium-setup",
    "gitbook": "gitbook serve documentation",
    "selenium-setup": "node node_modules/protractor/bin/webdriver-manager update",
    "selenium": "node node_modules/protractor/bin/webdriver-manager start",
    "protractor": "node node_modules/protractor/bin/protractor protractor.js",
    "e2e": "start npm run start && start npm run selenium && timeout 90 && start npm run protractor",
    "show-docs": "http-server -c-1 -o -p 8080 ClientDocumentation",
    "build-docs": "compodoc ClientApp -p docsconfig.json -d ./ClientDocumentation"
  },
